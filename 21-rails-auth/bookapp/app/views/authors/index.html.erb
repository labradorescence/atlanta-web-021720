<h1>List of all authors</h1>

<% @authors.each do |author| %>
  <ul>
    <li> <b> Username: </b> <%= author.username %> </li>
    <% if author.id == current_author.id %>

      <%= link_to "Edit", edit_author_path(author) %>
      <%= button_to "Delete", author, :method => :delete %>

    <% end %>
  </ul>
<% end%>
